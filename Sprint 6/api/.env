# Configuración de la base de datos
DATABASE_URL=sqlite+aiosqlite:///./pizzeria.db

# Configuración JWT
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Configuración de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=pizzeria@lafornace.cl

# Configuración de Pasarela de Pago (Transbank)
TRANSBANK_API_URL=https://webpay3gint.transbank.cl
TRANSBANK_COMMERCE_CODE=597055555532
TRANSBANK_API_KEY=your-api-key

# Configuración de almacenamiento
STORAGE_TYPE=local
STORAGE_PATH=./uploads
# S3_BUCKET=pizzeria-images
# S3_REGION=us-east-1

# Configuración de la aplicación
APP_NAME=Pizzería La Fornace API
APP_VERSION=1.0.0
DEBUG=True
RADIO_COBERTURA_KM=15
